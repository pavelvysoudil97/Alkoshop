<body id="color-body">

    <div class="jumbotron" style="background-image:url('/Design/alk.png'); background-size: 100%; height: 250px; margin: 0"></div>
    <div id="nav" class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 border-bottom shadow-sm">
        <a href="@Url.Action("Index", "Home")" class="pr-4"><img alt="XXX" src="~/Design/alkoshop_logo.png" width="100px" height="35px" /></a>
        <nav class="my-2 my-md-0 mr-md-3 ">
            <a class="p-2 text-white" href="@Url.Action("Index", "Home")">Produkty</a>
            <a class="p-2 text-white" href="@Url.Action("AboutUs", "Home")">O nás</a>
            <a class="p-2 text-white" href="@Url.Action("Conditions", "Home")">Obchodní podmínky</a>
        </nav>
        <div id="sing">
            <a class="btn btn-outline-success float-lg-right text-white" href="@Url.Action("Index", "Login", new {area = "Customer"})"> Přihlásit se </a>
            <a class="btn btn-outline-success float-lg-right text-white" style="margin-right: 10px" href="@Url.Action("Create", "Address", new {cusoremp = "cus"})"> Registrace </a>
        </div>
    </div>

    @if (TempData["message-success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["message-success"];
        </div>
    }
    @if (TempData["message-no-success"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["message-no-success"];
        </div>
    }

    <nav class="col-sm-2 d-none d-md-block sidebar">
        <div class="sidebar-sticky">
            <ul class="nav flex-column">
                @RenderSection("SideMenu", false)

            </ul>
        </div>
